{
  "title": "Redirect to DuckDuckGo",
  "name": "ddgredir",
  "version": "1.4.1",
  "description": "Redirects Google searches to DuckDuckGo",
  "main": "index.js",
  "author": "disorientedperson",
  "engines": {
    "firefox": ">=38.0a1"
  },
  "license": "GPL",
  "keywords": [
    "duckduckgo", "google"
  ],
  
  "preferences": [{
    "name": "googleredir",
    "title": "Enable Google redirect",
    "type": "bool",
    "value": true
  },
  {
    "name": "bingredir",
    "title": "Enable Bing redirect",
    "type": "bool",
    "value": true
  },
  { 
    "name": "yahooredir",
    "title": "Enable Yahoo redirect",
    "type": "bool",
    "value": true
  },
  {
    "name": "yahomeredir",
    "title": "Redirect from Yahoo.com homepage",
    "type": "bool",
    "value": false
    }]
  
}
